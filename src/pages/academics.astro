---
import Layout from '../components/Layout.astro';
import SectionHeading from '../components/SectionHeading.astro';
import Card from '../components/Card.astro';

const courses = [
  {
    title: 'AP Computer Science A',
    description: 'Strengthened my understanding of algorithms, logic, and programming. I learned how to break big challenges into manageable parts, debug patiently, and build working systems.'
  },
  {
    title: 'AP Physics 1 & AP Physics 2',
    subtitle: '(completed in the same year)',
    description: 'Taught me discipline, curiosity, and resilience. Helped me see the world mathematically and apply theory to real systems, even through extremely rigorous work.'
  },
  {
    title: 'AP Precalculus',
    description: 'Deepened my mathematical intuition and comfort with complex ideas. Reinforced creativity and pattern recognition in problem solving.'
  },
  {
    title: 'AP Statistics',
    description: 'Showed me how data explains real-world trends. Helped me understand probability, data interpretation, and how to question conclusions thoughtfully.'
  },
  {
    title: 'Advanced Computer Science',
    subtitle: '(LASA Course)',
    description: 'Challenged me to go beyond foundational coding and strengthened my technical confidence.'
  },
  {
    title: 'Constitutional Law',
    subtitle: '(LASA Course)',
    description: 'Built my skills in argumentation, critical thinking, and legal reasoning. Helped me analyze multiple perspectives thoughtfully.'
  },
  {
    title: 'AP English Language & Composition',
    description: 'Strengthened my writing, rhetorical thinking, and ability to communicate clearly — skills that matter deeply in STEM.'
  },
  {
    title: 'AP U.S. History',
    description: 'Developed my ability to analyze systems over time, research deeply, and understand how the past shapes the present.'
  },
  {
    title: 'AP Comparative Government',
    description: 'Helped me understand global systems, leadership, and policy — connecting civic awareness with responsibility.'
  }
];
---

<Layout
  title="Academics"
  description="Maren Stokes' academic journey at LASA, including challenging coursework and enrichment programs."
>
  <div class="academics-page">
    <SectionHeading
      title="Academics"
      subtitle="My academic journey at LASA and beyond"
    />

    <section class="school-info">
      <div class="info-card">
        <h3>School</h3>
        <p class="school-name">Liberal Arts and Science Academy (LASA)</p>
        <p class="school-location">Austin, Texas</p>
      </div>

      <div class="info-card">
        <h3>Academic Interests</h3>
        <ul class="interests-list">
          <li>Mathematics</li>
          <li>Physics</li>
          <li>Computer Science</li>
          <li>Machine Learning</li>
        </ul>
      </div>

      <div class="info-card">
        <h3>Enrichment</h3>
        <p>UT Austin Computer Science Machine Learning Camps (2 summers)</p>
      </div>
    </section>

    <section class="coursework-section">
      <h2 class="section-title">Challenging Coursework</h2>
      <p class="coursework-intro">
        At LASA, I've intentionally chosen rigorous courses that challenge me to think deeply,
        problem-solve creatively, and understand the world from multiple perspectives.
        Instead of listing scores, I want to focus on what these classes <em>taught</em> me.
      </p>

      <div class="courses-grid">
        {courses.map((course) => (
          <div class="course-card">
            <h3 class="course-title">
              {course.title}
              {course.subtitle && <span class="course-subtitle">{course.subtitle}</span>}
            </h3>
            <p class="course-description">{course.description}</p>
          </div>
        ))}
      </div>
    </section>
  </div>
</Layout>

<style>
  .academics-page {
    max-width: 900px;
  }

  .school-info {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--spacing-xl);
    margin-bottom: var(--spacing-3xl);
  }

  .info-card {
    background-color: var(--color-white);
    padding: var(--spacing-xl);
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-sm);
    border: 1px solid rgba(74, 74, 74, 0.08);
  }

  .info-card h3 {
    font-family: var(--font-heading);
    font-size: var(--font-size-lg);
    font-weight: 700;
    color: var(--color-text-dark);
    margin-bottom: var(--spacing-md);
  }

  .school-name {
    font-size: var(--font-size-lg);
    font-weight: 600;
    color: var(--color-text-dark);
    margin-bottom: var(--spacing-xs);
  }

  .school-location {
    font-size: var(--font-size-base);
    color: var(--color-text-light);
  }

  .interests-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .interests-list li {
    font-size: var(--font-size-base);
    color: var(--color-text);
    padding: var(--spacing-xs) 0;
    padding-left: var(--spacing-md);
    position: relative;
  }

  .interests-list li::before {
    content: '•';
    position: absolute;
    left: 0;
    color: var(--color-accent);
    font-weight: 700;
  }

  .info-card p {
    font-size: var(--font-size-base);
    color: var(--color-text);
    line-height: 1.6;
    margin: 0;
  }

  .coursework-section {
    margin-top: var(--spacing-3xl);
  }

  .section-title {
    font-family: var(--font-heading);
    font-size: var(--font-size-3xl);
    font-weight: 800;
    color: var(--color-text-dark);
    margin-bottom: var(--spacing-lg);
  }

  .coursework-intro {
    font-size: var(--font-size-lg);
    line-height: 1.7;
    color: var(--color-text);
    margin-bottom: var(--spacing-2xl);
    max-width: 700px;
  }

  .coursework-intro em {
    font-style: italic;
    color: var(--color-text-dark);
  }

  .courses-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: var(--spacing-xl);
  }

  .course-card {
    background-color: var(--color-white);
    padding: var(--spacing-xl);
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-sm);
    border: 1px solid rgba(74, 74, 74, 0.08);
    transition: all var(--transition-base);
  }

  .course-card:hover {
    box-shadow: var(--shadow-md);
    transform: translateY(-2px);
  }

  .course-title {
    font-family: var(--font-heading);
    font-size: var(--font-size-lg);
    font-weight: 700;
    color: var(--color-text-dark);
    margin-bottom: var(--spacing-sm);
    line-height: 1.3;
  }

  .course-subtitle {
    display: block;
    font-size: var(--font-size-sm);
    font-weight: 500;
    color: var(--color-text-light);
    margin-top: var(--spacing-xs);
  }

  .course-description {
    font-size: var(--font-size-base);
    line-height: 1.6;
    color: var(--color-text);
    margin: 0;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .school-info {
      grid-template-columns: 1fr;
      gap: var(--spacing-lg);
    }

    .courses-grid {
      grid-template-columns: 1fr;
      gap: var(--spacing-lg);
    }

    .course-card {
      padding: var(--spacing-lg);
    }

    .coursework-intro {
      font-size: var(--font-size-base);
    }
  }
</style>
