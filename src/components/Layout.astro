---
import '../styles/global.css';
import Sidebar from './Sidebar.astro';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'Maren Stokes',
  description = 'High school student passionate about mathematics, physics, computer science, and leadership.'
} = Astro.props;

const fullTitle = title === 'Maren Stokes' ? title : `${title} | Maren Stokes`;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={description}>
  <meta name="author" content="Maren Stokes">

  <!-- Open Graph / Social Media -->
  <meta property="og:type" content="website">
  <meta property="og:title" content={fullTitle}>
  <meta property="og:description" content={description}>

  <!-- Favicon (placeholder for now) -->
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">

  <title>{fullTitle}</title>
</head>
<body>
  <div class="app-container">
    <Sidebar />
    <main class="main-content">
      <slot />
    </main>
  </div>
</body>
</html>

<style>
  .app-container {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }

  .main-content {
    flex: 1;
    max-width: 1200px;
    width: 100%;
    margin: 0 auto;
    padding: var(--spacing-2xl) var(--spacing-xl);
  }

  /* Responsive Layout */
  @media (max-width: 768px) {
    .main-content {
      padding: var(--spacing-xl) var(--spacing-lg);
    }
  }
</style>
